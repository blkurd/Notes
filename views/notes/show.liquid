{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>{{note.title}}</h2>
            <h4>The color of the note is: {{note.color}}</h4>
            <div class="colorBox" style="background-color: {{note.color}}"></div>
            {% if note.owner == userId %}
                <hr>
                <div class="btn-group">
                    {%- comment -%}
                    first button will take us to the edit page
                    second will actually be a form, that calls our delete route
                    {%- endcomment -%}
                    <a href="/notes/edit/{{note.id}}" class="btn btn-primary">Edit {{note.title}}</a>
                    <form action="/notes/{{note.id}}?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-danger" value="Delete {{note.name}}">
                    </form>
                </div>
            {% endif %}
        </article>
        <hr>
        <h4>comments</h4>
        <hr>
        {% if loggedIn %}
            <div class="col-md-6">
                <form action="/comments/{{ note.id }}" method="POST">
                    <fieldset>
                        <legend>Add Comment</legend>
                        <label class="form-label">comment: </label>
                        <input type="text" name="note" class="form-control mb-1">
                    </fieldset>
                    <input type="submit" class="btn btn-success" value="add comment">
                </form>
            </div>
        {% else %}
            <div class="col-md-6">
                <small>If you'd like to leave a comment, please log in...</small>
            </div>
        {% endif %}
        <hr>
        {% if note.comments.length > 0 %}
            <div class="container-sm justify-content-center">
                {% for comm in note.comments %}
                    {% render '../comment.liquid', comm: comm, userId: userId, note: note %}
                {% endfor %}
            </div>
        {% else %}
            <small>no comments yet...</small>
        {% endif %}
    </div>
{% endblock %}